# PostgreSQL Configuration
POSTGRES_USER=example_postgres_user
POSTGRES_PASSWORD=example_postgres_password
POSTGRES_DB=automation_db

# Employee Service Database
EMPLOYEES_POSTGRES_DB=employee_db
EMPLOYEES_POSTGRES_USER=example_postgres_user
EMPLOYEES_POSTGRES_PASSWORD=example_postgres_password

# Project Service Database
PROJECTS_POSTGRES_DB=project_db
PROJECTS_POSTGRES_USER=example_postgres_user
PROJECTS_POSTGRES_PASSWORD=example_postgres_password

# Keycloak Configuration
KEYCLOAK_POSTGRES_DB=keycloak_db
KEYCLOAK_ADMIN=example_admin
