# Service Ports
API_GATEWAY_PORT=8080
FRONTEND_PORT=4200

# PgAdmin (optional)
PGADMIN_DEFAULT_EMAIL=example_pgadmin@domain.com
PGADMIN_DEFAULT_PASSWORD=example_pgadmin_password